        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "id": "1_1",
                    "manuscripts": [
                      {
                        "m_filename": "1_1_test.xml",
                        "m_id": 11,
                        "m_title": "Test manuscript",
                        "m_type": 1,
                        "manuscript_changes": "<p>Formatted changes</p>",
                        "manuscript_normalized": "<p>Full manuscript text contents.</p>"
