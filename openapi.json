          }
        ],
        "tags": [
          "digitaledition"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "example": {
                    "title": "Test Person",
                    "content": "Test Person is a very interesting person.",
                    "givenname": "Test",
                    "surname": "Person"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Person ID not found in database"
          }
        }
      }
    },
